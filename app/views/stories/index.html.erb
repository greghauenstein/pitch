<ul>
  <% @stories.each do |story| %>
    <article class="pitch">
    	<h3><%= story.title %></h3>
    	<p><%= story.summary %></p>
      	    
      <ul class="list-unstyled list-inline">
      	<li>
      		<%= link_to story do %>Read more and comment <i class="fa fa-chevron-right"></i><% end %>
      	</li>
      	<li class="user-only"><%= link_to 'Edit', edit_story_path(story) %></li>
      	<li class="user-only"><%= link_to 'Delete', story, method: :delete, data: { confirm: 'Are you sure?' } %></li>
      </ul>
    </article>
  <% end %>
</ul>

<%= will_paginate @stories %>

<p><%= link_to "Add a story", new_story_path %></p>