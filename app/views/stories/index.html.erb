<% @stories.each do |story| %>
	<article class="story">
		<div class="vote-column">
			<div class="vote-cell upvote">
				<% if current_user && current_user.votes.where(:story_id => story.id, :up => true).present? %>
				  <i class="fa fa-check red"></i>
				<% elsif current_user %>
				  <%= link_to (raw("<i class='fa fa-chevron-up'></i>")), votes_path(:vote => {:story_id => story.id, :up => true}), :method => :post, class: 'black' %>
				<% end %>
			</div>
			<div class="vote-cell count">
			 <strong><%= story.votes.where(:up => true).count - story.votes.where(:up => false).count %></strong>
			</div>
			<div class="vote-cell downvote">
				<% if current_user && current_user.votes.where(:story_id => story.id, :up => false).present? %>
				  <i class="fa fa-check red"></i>
				<% elsif current_user %>
				  <%= link_to (raw("<i class='fa fa-chevron-down'></i>")), votes_path(:vote => {:story_id => story.id, :up => false}), :method => :post, class: 'black' %>
				<% end %>
			</div>
		</div>
		<h3><%= story.title %></h3>
		
		 
	     
		   
		<p><strong>Submitted by:</strong> <%= story.user.display_name %> <%= time_ago_in_words(story.created_at) %> ago.</p>
		<p><%= story.summary %></em></p>
	  
	  <div class="clearfix"></div>
	  
	  <ul class="list-unstyled list-inline">
	  	<li>
	  		<%= link_to story do %>Read more and comment <i class="fa fa-chevron-right"></i><% end %>
	  	</li>
	  </ul>
	</article>
<% end %>

<%= will_paginate @stories %>

<p><%= link_to "Add a story", new_story_path %></p>