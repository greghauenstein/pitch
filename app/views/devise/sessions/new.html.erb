<div class="devise-wrapper">
	<h2>Sign in</h2>
	
	<%= form_for(resource, :as => resource_name, :html => { class: 'form-horizontal' }, :url => session_path(resource_name)) do |f| %>
	  <div class="form-group">
	  	<%= f.label :email, class: 'col-sm-4 control-label' %>
	  	<div class="col-sm-6">
	  		<%= f.email_field :email, class: 'form-control' %>
	  	</div>
	  </div>
	
	  <div class="form-group">
	  	<%= f.label :password, class: 'col-sm-4 control-label' %>
	  	<div class="col-sm-6">
	  		<%= f.password_field :password, class: 'form-control' %>
	  	</div>
	  </div>
	  
	  <% if devise_mapping.rememberable? -%>
	    <div class="col-sm-6 col-sm-offset-4"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>
	  
	  <div class="form-group">
	  	<div class="col-sm-offset-4 col-sm-4">
	    	<%= f.submit "Sign in", class: 'btn btn-block btn-primary' %>
	    </div>
	  </div>
	  
	  <!--<%= link_to 'Cancel', stories_path, class: 'btn btn-sm btn-default' %>-->
	  
	<% end %>
	<br /><br />
	<%= render "devise/shared/links" %>
</div>
