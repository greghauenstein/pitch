<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="form-group">
    <p class="sr-only"><%= f.label :first_name %></p>
  	<%= f.text_field :first_name, :placeholder => "First name", class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <p class="sr-only"><%= f.label :last_name %></p>
  	<%= f.text_field :last_name, :placeholder => "Last name", class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <p class="sr-only"><%= f.label :display_name %></p>
  	<%= f.text_field :display_name, :placeholder => "Display name (The name you want users to see.)", class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <p class="sr-only"><%= f.label :email %></p>
  	<%= f.email_field :email, :placeholder => "Email address", class: 'form-control' %>
  </div>

  <div class="form-group">
    <p class="sr-only"><%= f.label :password %></p>
  	<%= f.password_field :password, :placeholder => "Password", class: 'form-control' %>
  </div>

  <div class="form-group">
    <p class="sr-only"><%= f.label :password_confirmation %></p>
  	<%= f.password_field :password_confirmation, :placeholder => "Confirm password", class: 'form-control' %>
  </div>
  
  <div class="form-group" style="border-top: 1px solid #cacaca; padding: 15px 25px; background: #f1f1f1;">
  	<%= f.submit "Sign up", class: 'btn btn-lg btn-primary' %>
  	<%= link_to 'Cancel', stories_path, class: 'btn btn-lg btn-default' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
